{
  "compilerOptions": {
    "target": "ESNext",
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {},
    "lib": ["ESNext"],
    "noEmit": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./src/", "./test/"],
  "exclude": ["node_modules", "dist"]
}
